<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/common_margin_150"
    android:layout_height="@dimen/common_margin_150">

    <androidx.cardview.widget.CardView
        android:id="@+id/family_container"
        style="@style/CardStyle_Default"
        android:layout_width="@dimen/common_margin_125"
        android:layout_height="@dimen/common_margin_125"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/img_speciality"
                android:layout_width="@dimen/common_margin_50"
                android:layout_height="@dimen/common_margin_50"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/common_margin_5"
                android:scaleType="fitXY"
                android:src="@drawable/logo" />
            <TextView
                android:id="@+id/txt_speciality"
                android:layout_width="@dimen/common_margin_125"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_speciality"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/common_margin_5"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="@dimen/common_text_size_12"
                android:gravity="center"
                android:text="@string/contacts"
                android:textColor="@color/colorBlack" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>